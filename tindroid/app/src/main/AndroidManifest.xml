<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="co.tinode.tindroid">
    <!-- Needed for adding an avatar pic when registering new accounts and reading attachments -->
    <application
        android:name=".TindroidApp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:requestLegacyExternalStorage="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup"
        tools:targetApi="q">
        <activity android:name=".bluehouse_allsettings"></activity>
        <activity
            android:name="net.bluehouse.bluehousedb.bluehouse_SettingsActivity"
            android:label="@string/title_activity_bluehouse__settings" />
        <activity android:name=".bluehouse_MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity android:name="net.bluehouse.bluehousedb.bhdb_ProfileActivity">
            <intent-filter
                android:autoVerify="true"
                tools:targetApi="m">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!--
                This is a catch-all URL pattern.
                Retarded Android is unable to parse URLs with fragments
                -->
                <data
                    android:host="web.bluehouse.co"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity android:name="net.bluehouse.bluehousedb.bhdb_LoginActivity">
            <intent-filter
                android:autoVerify="true"
                tools:targetApi="m">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!--
                This is a catch-all URL pattern.
                Retarded Android is unable to parse URLs with fragments
                -->
                <data
                    android:host="web.bluehouse.co"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.bluehouse.bluehousedb.bhdb_VerificationActivity"
            android:parentActivityName="net.bluehouse.bluehousedb.bhdb_MainActivity">
            <intent-filter
                android:autoVerify="true"
                tools:targetApi="m">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!--
                This is a catch-all URL pattern.
                Retarded Android is unable to parse URLs with fragments
                -->
                <data
                    android:host="web.bluehouse.co"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity android:name="net.bluehouse.bluehousedb.bhdb_MainActivity">
            <intent-filter
                android:autoVerify="true"
                tools:targetApi="m">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!--
                This is a catch-all URL pattern.
                Retarded Android is unable to parse URLs with fragments
                -->
                <data
                    android:host="web.bluehouse.co"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SplashActivity"
            android:launchMode="singleTask"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Default icon for push notifications. -->
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme">
            <intent-filter
                android:autoVerify="true"
                tools:targetApi="m">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!--
                This is a catch-all URL pattern.
                Retarded Android is unable to parse URLs with fragments
                -->
                <data
                    android:host="web.bluehouse.co"
                    android:scheme="https" />
            </intent-filter>
        </activity> <!-- Default color for push notifications. -->
        <activity
            android:name=".ChatsActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize">

            <!--
                meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable_contacts"/
            -->
        </activity>
        <activity
            android:name=".MessageActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize">
            <intent-filter
                android:icon="@mipmap/ic_launcher"
                tools:ignore="AppLinkUrlError">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="vnd.android.cursor.item/vnd.co.tinode.im" />
            </intent-filter>
            <intent-filter>

                <!-- this is used when a AndroidNotification is provided in an FCM push message -->
                <action android:name=".MessageActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StartChatActivity"
            android:label="@string/action_new_chat"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".SendToActivity"
            android:label="@string/send_to"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="*/*" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.google.android.gms.oss.licenses.OssLicensesMenuActivity"
            android:theme="@style/LicensesTheme" />
        <activity
            android:name="com.google.android.gms.oss.licenses.OssLicensesActivity"
            android:theme="@style/LicensesTheme" />

        <meta-data
            android:name="asset_statements"
            android:resource="@string/asset_statements" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_logo_push" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="co.tinode.tindroid.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <service
            android:name=".services.TinodeAccountService"
            android:exported="false">

            <!-- Required filter used by the system to launch the account service. -->
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>
            <!-- This points to an XMLf ile which describes the account service. -->
            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>
        <!--
 FirebaseMessagingService performs security checks at runtime,
             no need for explicit permissions despite exported="true".
             Using tools:ignore="ExportedService" to disable the warning
        -->
        <service
            android:name=".services.ContactsSyncService"
            android:exported="false">
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>

            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/syncadapter" />
            <meta-data
                android:name="android.provider.CONTACTS_STRUCTURE"
                android:resource="@xml/contacts_source" />
        </service>
        <service
            android:name=".services.FBaseMessagingService"
            tools:ignore="ExportedService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>
    <uses-permission android:name="android.permission.INTERNET" /> <!-- Needed for saving attachments -->
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" /> <!-- Needed for contact discovery - finding users on tinode who are in user's address book -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- Store tinode IM id as a record in the address book -->
    <uses-permission android:name="android.permission.CAMERA" /> <!-- Creating and storing tinode credentials in the AccountManager -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" /> <!-- Accessing Tinode-authenticated accounts on Android pre-M (23). -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" /> <!-- Make current user discoverable by other users -->
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" /> <!-- Check if account sync is enabled -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" /> <!-- Enable sync if it's disabled -->
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS" />

    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />

</manifest>