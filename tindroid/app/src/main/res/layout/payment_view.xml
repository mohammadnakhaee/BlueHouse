<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:orientation="horizontal"
    android:paddingBottom="2dp"
    android:paddingTop="2dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp" >

    <ImageView
        android:id="@android:id/icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="5dp"
        android:contentDescription="@string/avatar"
        app:srcCompat="@drawable/ic_person_circle" />

    <ImageButton
        android:id="@+id/optionsMenu"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/ic_more_vert"
        android:tint="?android:attr/textColorSecondary"
        android:focusable="false"
        android:contentDescription="@string/options_menu"
        android:background="?attr/selectableItemBackgroundBorderless" />

    <LinearLayout
        android:id="@+id/statusContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/optionsMenu"
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        android:focusable="false">

        <TextView
            tools:text="one"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingLeft="@dimen/label_h_padding"
            android:paddingRight="@dimen/label_h_padding"
            android:paddingBottom="1.3dp"
            android:background="@drawable/border_green"
            android:layout_marginLeft="@dimen/label_margin"
            android:layout_marginRight="@dimen/label_margin"
            android:textSize="12sp"
            android:typeface="monospace"/>
        <TextView
            tools:text="two"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingLeft="@dimen/label_h_padding"
            android:paddingRight="@dimen/label_h_padding"
            android:paddingBottom="1.3dp"
            android:background="@drawable/border_green"
            android:layout_marginLeft="@dimen/label_margin"
            android:layout_marginRight="@dimen/label_margin"
            android:textSize="12sp"
            android:typeface="monospace"/>
        <TextView
            tools:text="three"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingLeft="@dimen/label_h_padding"
            android:paddingRight="@dimen/label_h_padding"
            android:paddingBottom="1.3dp"
            android:background="@drawable/border_green"
            android:textSize="12sp"
            android:layout_marginLeft="@dimen/label_margin"
            android:layout_marginRight="@dimen/label_margin"
            android:typeface="monospace"/>
    </LinearLayout>

    <TextView
        android:id="@android:id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@android:id/icon"
        android:layout_toStartOf="@id/statusContainer"
        android:lines="1"
        android:maxLines="1"
        android:paddingEnd="16sp"
        android:singleLine="true"
        android:textAppearance="@style/contactListTextPrimary"
        tools:ignore="RtlSymmetry"
        tools:text="Test text" />

    <TextView
        android:id="@android:id/text2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:ellipsize="end"
        android:maxLines="1"
        android:lines="1"
        android:singleLine="true"
        android:layout_below="@android:id/text1"
        android:layout_toStartOf="@id/optionsMenu"
        android:layout_toEndOf="@android:id/icon"
        tools:text="Dolorem ipsum quia dolor sit amet consectetur adipisci velit"
        android:textAppearance="?android:attr/textAppearanceSmall"/>


    <TextView
        android:id="@android:id/text2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@android:id/text1"
        android:layout_gravity="top"
        android:layout_toEndOf="@android:id/icon"
        android:layout_toStartOf="@id/optionsMenu"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:text="Dolorem ipsum quia dolor sit amet consectetur adipisci velit" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_below="@android:id/text2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/m_1"
            android:text="1"
            android:textColor="#000000"
            android:textAllCaps="true"
            android:layout_weight="1"
            android:background="#FFFFFF"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/m_2"
            android:text="2"
            android:textColor="#000000"
            android:textAllCaps="true"
            android:layout_weight="1"
            android:background="#FFFFFF"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/m_3"
            android:text="3"
            android:textColor="#000000"
            android:textAllCaps="true"
            android:layout_weight="1"
            android:background="#FFFFFF"/>


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/m_4"
            android:text="4"
            android:textColor="#000000"
            android:textAllCaps="true"
            android:layout_weight="1"
            android:background="#FFFFFF"/>


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/m_5"
            android:text="5"
            android:textColor="#000000"
            android:textAllCaps="true"
            android:layout_weight="1"
            android:background="#FFFFFF"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/m_6"
            android:text="6"
            android:textColor="#000000"
            android:textAllCaps="true"
            android:layout_weight="1"
            android:background="#FFFFFF"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/m_7"
            android:text="7"
            android:textColor="#000000"
            android:textAllCaps="true"
            android:layout_weight="1"
            android:background="#FFFFFF"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/m_8"
            android:text="8"
            android:textColor="#000000"
            android:textAllCaps="true"
            android:layout_weight="1"
            android:background="#FFFFFF"/>


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/m_9"
            android:text="9"
            android:textColor="#000000"
            android:textAllCaps="true"
            android:layout_weight="1"
            android:background="#FFFFFF"/>


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/m_10"
            android:text="10"
            android:textColor="#000000"
            android:textAllCaps="true"
            android:layout_weight="1"
            android:background="#FFFFFF"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/m_11"
            android:text="11"
            android:textColor="#000000"
            android:textAllCaps="true"
            android:layout_weight="1"
            android:background="#FFFFFF"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/m_12"
            android:text="12"
            android:textColor="#000000"
            android:textAllCaps="true"
            android:layout_weight="1"
            android:background="#FFFFFF"/>
    </LinearLayout>

</RelativeLayout>